<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#E1BEE7"
                android:endColor="#F8BBD0"
                android:angle="45" />
        </shape>
    </item>

    <!-- Default State - Light Aqua-Blue Gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#A1E3F6"
                android:centerColor="#B8D8F8"
                android:endColor="#C2E9FB"
                android:angle="45" />0
        </shape>
    </item>

</selector>
