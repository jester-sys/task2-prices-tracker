<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Dark background color -->
    <solid android:color="#1E1E1E" /> <!-- Dark gray -->

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#444444" /> <!-- Slightly lighter gray for visible border -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Padding inside EditText -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
